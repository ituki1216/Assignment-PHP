{
    "name": "myusername/my-php-app",  
    "description": "A simple PHP application",
    "type": "project",
    "require": {
        "php": "^8.2",
        "monolog/monolog": "^2.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Dependencies installed successfully!'"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    }
}
