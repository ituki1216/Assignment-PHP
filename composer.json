{
  "name": "php",
  "description": "A simple PHP project deployed on Render",
  "require": {
    "php": "^8.2",  
    "symfony/http-foundation": "^5.3",  
    "symfony/polyfill-mbstring": "^1.0" 
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"  
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"file_exists('vendor/autoload.php') || exit(1);\""
    ]
  },
  "config": {
    "platform": {
      "php": "8.2.12"  
    }
  }
}
